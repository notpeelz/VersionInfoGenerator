<Project Sdk="Microsoft.NET.Sdk">
  <Import Project="VersionInfoSharedProps.props" />
  <PropertyGroup>
    <PackageId>VersionInfoGenerator</PackageId>
    <RootNamespace>VersionInfoGenerator</RootNamespace>
    <BuildOutputTargetFolder>analyzers</BuildOutputTargetFolder>
    <CopyLocalLockFileAssemblies>true</CopyLocalLockFileAssemblies>
    <AutoGenerateBindingRedirects>true</AutoGenerateBindingRedirects>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <SuppressDependenciesWhenPacking>true</SuppressDependenciesWhenPacking>
  </PropertyGroup>
  <ItemGroup>
    <EmbedAssemblies Include="$(OutputPath)/VersionInfoGenerator.Generator.dll" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="ILRepack.Lib.MSBuild" Version="2.1.16.1" PrivateAssets="all" />
  </ItemGroup>
  <ItemGroup>
    <_PackageFiles Include="VersionInfoGenerator.targets" PackagePath="build" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="../VersionInfoGenerator.Generator/VersionInfoGenerator.Generator.csproj" ReferenceOutputAssembly="true" OutputItemType="Analyzer" />
  </ItemGroup>

  <Import Project="VersionInfoGenerator.targets" />
</Project>
